<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:progress="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.whf.customprogressbar.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.whf.customprogressbar.CustomHorizontalProgressBar
            android:id="@+id/custom_horizontal_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:progress="0" />

        <com.whf.customprogressbar.CustomHorizontalProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            progress:progress_reach_color="#FF9900"
            progress:progress_unreach_color="#D15FEE"
            progress:progress_text_color="#113DEE"
            android:progress="50" />

        <com.whf.customprogressbar.CustomHorizontalProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            progress:progress_reach_height="5dp"
            progress:progress_unreach_height="5dp"
            progress:progress_text_size="15sp"
            android:progress="50" />

        <com.whf.customprogressbar.CustomHorizontalProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            progress:progress_reach_height="5dp"
            progress:progress_unreach_height="5dp"
            progress:progress_text_size="15sp"
            progress:progress_text_offest="25dp"
            android:progress="50" />

        <com.whf.customprogressbar.CustomRoundProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/custom_round_progressbar"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            progress:progress_radio_size="50dp"
            progress:progress_reach_height="5dp"
            android:progress="0" />

        <com.whf.customprogressbar.CustomRoundProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            progress:progress_radio_size="80dp"
            progress:progress_reach_color="#DC143C"
            progress:progress_unreach_color="#EECBAD"
            progress:progress_text_size="20sp"
            progress:progress_text_color="#A020F0"
            progress:progress_reach_height="10dp"
            progress:progress_unreach_height="5dp"
            android:progress="50" />
    </LinearLayout>
</ScrollView>
